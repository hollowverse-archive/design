{
  "name": "hollowverse-design",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "yarn storybook",
    "storybook": "start-storybook -p 8080 -s ./public -c .storybook -h 0.0.0.0",
    "clown": "clown",
    "pre-push": "yarn common-check",
    "pre-commit": "yarn common-check",
    "lint-staged": "lint-staged",
    "common-check": "run-p -c --aggregate-output 'clown check' check-integrity lint",
    "check-integrity": "yarn check --integrity",
    "eslint": "eslint . --config .eslintrc.json --ext .js --ext .jsx",
    "lint": "yarn eslint",
    "build": "build-storybook -s ./public -c .storybook -o dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hollowverse/design.git"
  },
  "homepage": "https://github.com/hollowverse/design#readme",
  "dependencies": {
    "@storybook/addon-viewport": "^4.0.0-alpha.7",
    "@storybook/react": "^4.0.0-alpha.7",
    "classnames": "^2.2.5",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "devDependencies": {
    "@hollowverse/clown": "^3.2.0",
    "@hollowverse/config": "^36.0.0",
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^1.0.0-rc.1",
    "lint-staged": "^7.0.5",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.14",
    "postcss-calc": "^6.0.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.9",
    "postcss-partial-import": "^4.1.0",
    "postcss-reporter": "^5.0.0",
    "postcss-svgo": "^2.1.6",
    "precss": "^2.0.0",
    "prettier": "^1.12.0",
    "style-loader": "^0.19.1",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "svg-url-loader": "^2.3.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "yarnhook": "^0.2.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [],
    "rules": {
      "rule-empty-line-before": null,
      "comment-empty-line-before": null,
      "at-rule-empty-line-before": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "appearance",
            "text-size-adjust",
            "text-decoration-skip"
          ]
        }
      ]
    }
  },
  "license": "Unlicense",
  "lint-staged": {
    "**/*.md": [
      "prettier --write",
      "git add"
    ],
    "**/*.{j,t}s{x,}": [
      "prettier --write",
      "git add"
    ],
    "**/!(package).json": [
      "prettier --write",
      "git add"
    ],
    "**/*.js{x,}": [
      "eslint"
    ],
    "**/**/*.{s,}css": [
      "stylelint --syntax scss",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-p -c --aggregate-output lint-staged pre-commit",
      "pre-push": "yarn pre-push",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  }
}
